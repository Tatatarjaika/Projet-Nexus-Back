{% extends 'base.html.twig' %}

{% block title %}Le Nexus - BackOffice{% endblock %}

{% block active_user %}{% endblock %}
{% block active_mood %}active{% endblock %}

{% block body %}
<div class="my-1 d-flex justify-content-between align-items-center px-3">
    <h1>Gestion des Moods</h1>
    <a href="{{ path('mood_new') }}" class="btn btn-success" role="button"><i class="fas fa-plus-circle"></i> Créer un mood</a>
</div>
<div class="table-responsive mx-3">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Date de création</th>
                <th>Date de modification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mood in moods %}
            <tr>
                <td>{{ mood.id }}</td>
                <td>{{ mood.name }}</td>
                <td>{{ mood.createdAt ? mood.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ mood.updatedAt ? mood.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
                <td>
                    <div class="d-flex">
                        <a href="{{ path('mood_show', {'id': mood.id}) }}" class="btn btn-success me-1" role="button"><i class="fas fa-binoculars fa-2x"></i></a>
                        <a href="{{ path('mood_edit', {'id': mood.id}) }}" class="btn btn-warning me-1" role="button"><i class="far fa-edit fa-2x"></i></a>
                        {{ include('mood/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Il n'y a pas grand chose à afficher par ici...</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

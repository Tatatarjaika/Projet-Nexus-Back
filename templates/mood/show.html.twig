{% extends 'base.html.twig' %}

{% block title %}Mood{% endblock %}

{% block active_user %}{% endblock %}
{% block active_mood %}active{% endblock %}

{% block body %}
<div class="col-4 mx-auto">
<div class="d-flex justify-content-between align-items-center">
    <h1>Détails : {{ mood.name }}</h1>
        <a href="{{ path('mood_new') }}" class="btn btn-success" role="button"><i class="fas fa-plus-circle"></i> Créer un mood</a>

</div>
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mood.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ mood.name }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ mood.createdAt ? mood.createdAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de modification</th>
                <td>{{ mood.updatedAt ? mood.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex mx-auto justify-content-center">
    <a href="{{ path('mood_index') }}"><button class="btn btn-primary me-3">Retour à la liste <i class="fas fa-step-backward"></i></button></a>

    <a href="{{ path('mood_edit', {'id': mood.id}) }}"><button class="btn btn-warning me-3">Editer <i class="far fa-edit"></i></button></a>

    {{ include('mood/_delete_form.html.twig') }}
    </div>
    </div>
{% endblock %}
